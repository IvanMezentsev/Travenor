<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="1dp"
    app:cardBackgroundColor="@color/white">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"> <androidx.cardview.widget.CardView
        android:id="@+id/cardImageContainer"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_margin="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ivPlaceImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background" />
    </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvPlaceName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="12dp"
            android:text="Niladri Reservoir"
            android:textColor="@color/text_primary"
            android:fontFamily="@font/sf_ui_display_semibold"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/cardImageContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/imgLocation"
            android:layout_width="16dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_location"
            app:tint="@color/text_secondary"
            android:layout_marginEnd="2dp"
            app:layout_constraintTop_toBottomOf="@id/tvPlaceName"
            app:layout_constraintStart_toStartOf="@id/cardImageContainer"
            app:layout_constraintEnd_toStartOf="@+id/tvPlaceLocation" />

        <TextView
            android:id="@+id/tvPlaceLocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="12dp"
            android:text="Tekergat, Sunamgnj"
            android:textColor="@color/text_secondary"
            android:fontFamily="@font/sf_ui_display_medium"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/tvPlaceName"
            app:layout_constraintStart_toEndOf="@id/imgLocation"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvPlacePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="12dp"
            android:text="$894/Person"
            android:textColor="@color/travenor_blue"
            android:textSize="14sp"
            android:fontFamily="@font/sf_ui_display_medium"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tvPlaceLocation"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>